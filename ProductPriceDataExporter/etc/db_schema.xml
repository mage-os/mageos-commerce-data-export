<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cde_product_prices_feed" resource="default" engine="innodb" comment="Product Prices Feed">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"
                comment="Autoincrement ID. System field"/>

        <column xsi:type="int"
                name="source_entity_id"
                padding="10"
                unsigned="true"
                nullable="false"
                comment="Product Entity Id"
        />
        <column
                xsi:type="varchar"
                name="feed_id"
                nullable="false"
                length="64"
                comment="Feed Item Identifier. Hash based on feed item identity fields"
        />
        <column
                xsi:type="timestamp"
                name="modified_at"
                on_update="true"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Created At"
        />
        <column
                xsi:type="tinyint"
                name="is_deleted"
                nullable="false"
                default="0"
                comment="Feed item deletion flag"
        />
        <column
                xsi:type="smallint"
                name="status"
                nullable="false"
                default="0"
                comment="Feed item status"
        />
        <column
                xsi:type="mediumtext"
                name="feed_data"
                nullable="false"
                comment="Feed Data"
        />
        <column
                xsi:type="varchar"
                name="feed_hash"
                nullable="false"
                length="64"
                comment="hash from {feed_data}"
        />
        <column
                xsi:type="text"
                name="errors"
                nullable="true"
                comment="Errors"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint referenceId="cde_product_prices_feed_id"  xsi:type="unique">
            <column name="feed_id"/>
        </constraint>
        <!-- \Magento\DataExporter\Model\Query\DeletedEntitiesByModifiedAtQuery::getQuery -->
        <index referenceId="cde_product_prices_feed_source_id_modified_at" indexType="btree">
            <column name="source_entity_id"/>
            <column name="modified_at"/>
        </index>
        <!-- for failed items -->
        <index referenceId="cde_product_prices_feed_status" indexType="btree">
            <column name="status"/>
        </index>
    </table>

</schema>
