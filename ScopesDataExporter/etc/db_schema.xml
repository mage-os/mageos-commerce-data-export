<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table
        name="scopes_website_data_exporter"
        resource="default"
        engine="innodb"
        comment="Scopes' Website Feed Storage">
        <column
            xsi:type="int"
            name="id"
            padding="10"
            unsigned="true"
            nullable="false"
            comment="ID"/>
        <column
            xsi:type="mediumtext"
            name="feed_data"
            nullable="false"
            comment="Feed Data"/>
        <column
            xsi:type="timestamp"
            name="modified_at"
            on_update="true"
            nullable="false"
            default="CURRENT_TIMESTAMP"
            comment="Created At"/>
        <column
            xsi:type="tinyint"
            name="is_deleted"
            nullable="false"
            default="0"
            comment="Website Deleted"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="scopes_website_data_exporter_modified_at" indexType="btree">
            <column name="modified_at"/>
        </index>
    </table>
    <table
        name="scopes_customergroup_data_exporter"
        resource="default"
        engine="innodb"
        comment="Scopes' Customer Group Feed Storage">
        <column
            xsi:type="int"
            name="id"
            padding="10"
            unsigned="true"
            nullable="false"
            comment="ID"/>
        <column
            xsi:type="mediumtext"
            name="feed_data"
            nullable="false"
            comment="Feed Data"/>
        <column
            xsi:type="timestamp"
            name="modified_at"
            on_update="true"
            nullable="false"
            default="CURRENT_TIMESTAMP"
            comment="Created At"/>
        <column
            xsi:type="tinyint"
            name="is_deleted"
            nullable="false"
            default="0"
            comment="Is Deleted"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="scopes_customergroup_data_exporter_modified_at" indexType="btree">
            <column name="modified_at"/>
        </index>
    </table>
</schema>
