<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">data_exporter_feed_details_component.data_exporter_feed_details_component_data_source
            </item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/ExportStatus/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
        <spinner>data_exporter_feed_details_component_columns</spinner>
        <deps>
            <dep>data_exporter_feed_details_component.data_exporter_feed_details_component_data_source</dep>
        </deps>
    </settings>
    <dataSource name="data_exporter_feed_details_component_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <!-- feed id -->
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="feed">*</param>
            </filterUrlParams>
        </settings>
        <aclResource>Magento_Catalog::products</aclResource>
        <dataProvider class="Magento\DataExporterStatus\Ui\DataProvider\FeedStatusDataProvider"
                      name="data_exporter_feed_details_component_data_source">
            <argument name="name" xsi:type="string">data_exporter_feeds_listing_component_data_source</argument>
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <massaction name="listing_massaction"
                    component="Magento_DataExporterStatus/js/grid/massaction/schedule-resync-massaction">
            <settings>
                <selectProvider>
                    data_exporter_feed_details_component.data_exporter_feed_details_component.data_exporter_feed_details_component_columns.ids
                </selectProvider>
            </settings>
            <action name="schedule_resync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to schedule resync for selected items?</message>
                        <title translate="true">Schedule Resync For Items</title>
                    </confirm>
                    <url path="data_exporter_status/FeedStatus/massActions_massResyncSchedule"/>
                    <type>schedule_resync</type>
                    <label translate="true">Schedule Resync</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="data_exporter_feed_details_component_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">source_entity_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="id" sortOrder="10">
            <settings>
                <label translate="true">Feed Item ID</label>
                <resizeDefaultWidth>25</resizeDefaultWidth>
            </settings>
        </column>
        <column name="source_entity_id" class="Magento\DataExporterStatus\Ui\Component\Listing\Column\EntityId"
                component="Magento_Ui/js/grid/columns/link" sortOrder="30">
            <settings>
                <label translate="true">Entity ID</label>
                <sortable>true</sortable>
                <filter>textRange</filter>
            </settings>
        </column>
        <column name="feed_identifiers" class="Magento\DataExporterStatus\Ui\Component\Listing\Column\FeedIdentifiers"
                sortOrder="40">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Feed Identifiers</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="status" component="Magento_DataExporterStatus/js/grid/columns/status-select" sortOrder="50">
            <settings>
                <filter>select</filter>
                <dataType>select</dataType>
                <options class="\Magento\DataExporterStatus\Ui\Component\Listing\Column\StatusSource"/>
                <bodyTmpl>Magento_DataExporterStatus/grid/cells/status</bodyTmpl>
                <label translate="true">Export Status</label>
            </settings>
        </column>
        <column name="modified_at" sortOrder="60">
            <settings>
                <sortable>false</sortable>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true">Last Sync Date</label>
            </settings>
        </column>
        <column name="is_deleted" component="Magento_Ui/js/grid/columns/select" sortOrder="70">
            <settings>
                <sortable>false</sortable>
                <dataType>select</dataType>
                <options>
                    <option name="true" xsi:type="array">
                        <item name="value" xsi:type="string">1</item>
                        <item name="label" xsi:type="string" translate="true">True</item>
                    </option>
                    <option name="false" xsi:type="array">
                        <item name="value" xsi:type="string">0</item>
                        <item name="label" xsi:type="string" translate="true">False</item>
                    </option>
                </options>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Is Entity Deleted?</label>
            </settings>
        </column>
        <column name="metadata" class="Magento\DataExporterStatus\Ui\Component\Listing\Column\RequestId" sortOrder="80">
            <settings>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Request ID</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="errors" class="Magento\DataExporterStatus\Ui\Component\Listing\Column\Errors" sortOrder="90">
            <settings>
                <bodyTmpl>Magento_DataExporterStatus/grid/cells/errors</bodyTmpl>
                <label translate="true">Error</label>
                <sortable>false</sortable>
            </settings>
        </column>
    </columns>
</listing>