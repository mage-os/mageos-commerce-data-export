<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">data_exporter_feeds_listing_component.data_exporter_feeds_listing_component_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>data_exporter_feeds_listing_component_columns</spinner>
        <deps>
            <dep>data_exporter_feeds_listing_component.data_exporter_feeds_listing_component_data_source</dep>
        </deps>
    </settings>
    <dataSource name="data_exporter_feeds_listing_component_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_Catalog::products</aclResource>
        <dataProvider class="Magento\DataExporterStatus\Ui\DataProvider\ExportStatusDataProvider" name="data_exporter_feeds_listing_component_data_source">
            <argument name="name" xsi:type="string">data_exporter_feeds_listing_component_data_source</argument>
            <settings>
                <requestFieldName>feedName</requestFieldName>
                <primaryFieldName>feedName</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="data_exporter_feeds_listing_component_columns">
        <column name="feed_summary" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Feed Name</label>
                <resizeDefaultWidth>25</resizeDefaultWidth>
            </settings>
        </column>
        <column name="source_records_qty" sortOrder="20">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Source Records</label>
            </settings>
        </column>
        <column name="success_records_qty" sortOrder="40">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Successfully Sent Records</label>
            </settings>
        </column>
        <column name="failed_records_qty" component="Magento_DataExporterStatus/js/grid/columns/column" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Failed Records</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="\Magento\DataExporterStatus\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>feed</indexField>
                <label translate="true">Action</label>
            </settings>
        </actionsColumn>
    </columns>
</listing>